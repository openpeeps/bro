import std/math

// basic system math
assert 1 + 1 == 2
assert 1 - 1 == 0 + 0 + 1 - 1
assert 1 * 2 == 2 * 1

assert floor(2.1) == 2.0
assert floor(2.9) == 2.0
//assert floor(-3.5) == -4.0 to do

assert max(10, 30) == 30
assert min(10, 30) == 10
assert round(4.2) == 4.0
// abs
assert hypot(3.0, 4.0) == 5.0
assert log(9.0, 3.0) == 2.0

assert pow(100.0, 1.5) == 1000.0
assert sqrt(4.0) == 2.0
assert sqrt(1.44) == 1.2

echo cos(deg2rad(60.0))
